{
  "compilerOptions": {

    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@innovations/shared/*": ["apps/innovations/.symlinks/shared/*"],
      "@users/shared/*": ["apps/users/.symlinks/shared/*"]
    },
    "outDir": "./dist",

    "strict": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "checkJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    // "importHelpers": true,
    "emitDecoratorMetadata": true,
    "importsNotUsedAsValues": "error",
    "exactOptionalPropertyTypes": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false, //  TODO: Review this in the future...

    "moduleResolution": "node",
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    // "types": [
    //   "reflect-metadata",
    //   "node"
    // ],
  },
  // "include": [
  //   "innovations/**/*",
  //   "__tests__/**/*"
  // ],
  "exclude": [
    "node_modules"
  ]
}
