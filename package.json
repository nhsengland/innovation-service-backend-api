{
  "name": "nhs-innovation-service-api",
  "version": "1.0.0",
  "description": "A port of the famous node-insult insult generator service to Azure Functions",
  "scripts": {
    "app:configure": "ln -s ../../../libs/shared ./apps/$npm_config_app/.symlinks/shared",
    "app:lint": "eslint apps/$npm_config_app/**/*.ts",
    "app:build": "rimraf dist/apps/$npm_config_app && tsc -p apps/$npm_config_app/tsconfig.json && tsc-alias -p apps/$npm_config_app/tsconfig.json && npm run app:postbuild",
    "app:postbuild": "copyfiles -u 1 apps/$npm_config_app/**/function.json dist/apps && copyfiles package.json host.json local.settings.json dist/apps/$npm_config_app",
    "app:watch": "npm run app:build && npm-run-all --parallel app:watch:*",
    "app:watch:tsc": "tsc --w --project apps/$npm_config_app/tsconfig.json --pretty",
    "app:watch:tsc-alias": "tsc-alias -w -p apps/$npm_config_app/tsconfig.json",
    "app:watch:func-start": "func host start --script-root dist/apps/$npm_config_app --port $npm_config_port --javascript",
    "app:test": "jest -c=apps/$npm_config_app/jest.config.ts --runInBand --coverage",
    "migrations": "ts-node ./node_modules/typeorm/cli.js migration:run -d libs/data-access/config/migrations-connection.config.ts",
    "migrations:new": "ts-node ./node_modules/typeorm/cli.js migration:create ./libs/data-access/migrations/$npm_config_name",
    "migrations:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert -d libs/data-access/config/migrations-connection.config.ts",
    "seeds": "ts-node ./node_modules/typeorm/cli.js migration:run -d libs/data-access/config/seeds-connection.config.ts",
    "postinstall": "npm run app:configure --app=innovations && npm run app:configure --app=notifications && npm run app:configure --app=users"
  },
  "dependencies": {
    "@aaronpowell/azure-functions-nodejs-openapi": "^0.4.0",
    "@azure/storage-blob": "^12.11.0",
    "@azure/storage-queue": "^12.10.0",
    "applicationinsights": "^2.3.5",
    "axios": "^0.27.2",
    "dotenv": "^16.0.2",
    "inversify": "^6.0.1",
    "joi": "^17.6.0",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "mongoose": "^6.6.0",
    "mssql": "^9.0.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.9",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.7.13",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "copyfiles": "^2.1.0",
    "eslint": "^8.23.0",
    "jest": "^29.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "typescript": "~4.7.4"
  }
}
